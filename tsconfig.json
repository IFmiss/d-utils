{
  "compilerOptions": {
    "target": "es5", 
    "module": "ESNext",
    "removeComments": false,
    "declaration": true,
    "outDir": "./es",
    "declarationDir": "./es",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts",
      "typings"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "sourceMap": false,
    "noImplicitAny": false
  },
  "files": [
    "./src/lib/index.ts"
  ],
  "include": [
    "src/lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}